<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_id_1"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent"
    android:layout_margin="15dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    cardview:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/food_icon"
            android:layout_marginTop="15dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/name_of_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon 1"
            android:textSize="35dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/description_of_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Description about food of restaurant"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <GridLayout
            android:columnCount="3"
            android:rowCount="1"
            android:layout_weight="4"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="14dp">

            <!-- Row 1 -->
            <!-- Column 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:backgroundTint="@android:color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:id="@+id/buttonMul"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_remove_24"/>

            </androidx.cardview.widget.CardView>

            <!-- Column 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:backgroundTint="@android:color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_add_24"
                    android:fontFamily="@font/icel"
                    android:textSize="35dp"
                    android:textAlignment="center"
                    android:text="0"/>

            </androidx.cardview.widget.CardView>

            <!-- Column 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:backgroundTint="@android:color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:id="@android:id/autofill"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_add_24"/>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>