<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_food_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/transparent"
    android:layout_margin="15dp"
    android:elevation="0dp"
    android:clickable="true"
    app:cardElevation="0dp"
    cardview:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/food_icon_detail"
            android:layout_marginTop="15dp"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/name_of_food_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="35dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/description_of_food_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonPurchase"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center_horizontal"
            android:text="Puchase"
            android:background="@drawable/button"
            android:backgroundTint="@android:color/holo_orange_dark"
            />

    </LinearLayout>

</ScrollView>